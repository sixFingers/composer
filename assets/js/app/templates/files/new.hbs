<form action="" name="newFile" id="newFile">
  <div class="form-group">
    <input type="text" class="form-control" name="path" value="{{path}}">
  </div>
  <div class="form-group">
    <textarea name="content" id="" cols="30" rows="10" class="form-control codemirror">{{content}}</textarea>
  </div>
  <div class="row">
    <div class="col-md-8">
      <input type="text" class="form-control" name="message" placeholder="Type a message here">
    </div>
    <!-- <div class="col-md-2">
      <button class="btn btn-block btn-default">Save</button>
    </div> -->
    <div class="col-md-2">
      <button class="btn btn-block btn-primary">Publish</button>
    </div>
  </div>
</form>

